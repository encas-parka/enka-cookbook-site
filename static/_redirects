# SPA Fallback pour Cloudflare Pages
# Toutes les routes qui ne sont pas des fichiers existants
# redirigent vers index.html

# /api/* sont des fichiers Hugo réels, pas de redirection
/api/* /api/:splat 200

# /recettes/* sont des fichiers Hugo réels
/recettes/* /recettes/:splat 200

# /data/* sont des fichiers Hugo réels
/data/* /data/:splat 200

# /images/* sont des fichiers statiques
/images/* /images/:splat 200

# /icons/* sont des fichiers statiques
/icons/* /icons/:splat 200

# /app/* sont les assets Svelte
/app/* /app/:splat 200

# Toutes les autres routes → SPA fallback
/* /index.html 200
